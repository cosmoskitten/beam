<!--
  Ant tasks used to create Javadoc across all of Beam.
-->
<project>

  <property name="collect.dir" location="target/collected"/>
  <property name="output.dir" location="../target/site/javadoc"/>
  
  <target name="collect-javadoc">
    <!-- suck up all the java code into one place.
    TODO: also absorb the overview.html and all that.-->
    <copy todir="${collect.dir}">
      <fileset dir="..">
	<include name="**/src/main/java/**/*.java"/>
	<exclude name="**/maven-archetypes/**"/>
      </fileset>
      <mapper type="regexp" from="^.*/src/main/java/(.*)$$" to="\1"/>
    </copy>
    <echo message="runtime classpath: ${runtime_classpath}"/>
    <javadoc sourcepath="${collect.dir}"
	     destdir="${output.dir}"
	     classpath="${compile_classpath}"
	     Overview="../sdks/java/javadoc/overview.html"
	     >
      <arg line="${beam.javadoc_opts}"/>
      <link offline="true" packageListLoc="../sdks/java/javadoc/jackson-databind-docs"/>
      <link offline="true" packageListLoc="../sdks/java/javadoc/junit-docs"/>
      <link offline="true" packageListLoc="../sdks/java/javadoc/dataflow-sdk-docs"/>
      <link offline="true" packageListLoc="../sdks/java/javadoc/joda-docs"/>
      <link offline="true" packageListLoc="../sdks/java/javadoc/hamcrest-docs"/>
      <link offline="true" packageListLoc="../sdks/java/javadoc/bq-docs"/>
      <link offline="true" packageListLoc="../sdks/java/javadoc/apiclient-docs"/>
      <link offline="true" packageListLoc="../sdks/java/javadoc/jackson-annotations-docs"/>
      <link offline="true" packageListLoc="../sdks/java/javadoc/guava-docs"/>
      <link offline="true" packageListLoc="../sdks/java/javadoc/datastore-docs"/>
      <link offline="true" packageListLoc="../sdks/java/javadoc/avro-docs"/>
      <link href="http://avro.apache.org/docs/current/api/java/" offline="true" packageListLoc="../sdks/java/javadoc/oauth-docs"/>
      <!--
	  <excludepackage name=""/>
      -->
    </javadoc>
  </target>
</project>
